<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    android:background="#fff">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!--<ImageView-->
        <!--android:id="@+id/imgEscolaL"-->
        <!--android:layout_width="119dp"-->
        <!--android:layout_height="103dp"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:src="@drawable/school" />-->


        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_x="14dp"
                android:layout_y="11dp"
                android:text="Nome:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomeText"
                android:layout_width="221dp"
                android:layout_height="31dp"
                android:layout_alignParentEnd="true"
                android:layout_x="93dp"
                android:layout_y="8dp"
                android:text="Nome"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_x="14dp"
                android:layout_y="72dp"
                android:text="Emdereço:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/endeText"
                android:layout_width="221dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_x="93dp"
                android:layout_y="71dp"
                android:autoLink="map"
                android:text="Endereço" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/nomeText"
                android:layout_alignParentStart="true"
                android:layout_marginStart="121dp"
                android:layout_x="16dp"
                android:layout_y="43dp"
                android:text="Telefone:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tellText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="142dp"
                android:layout_x="93dp"
                android:layout_y="43dp"
                android:autoLink="phone"
                android:text="Telefone" />

        </AbsoluteLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>